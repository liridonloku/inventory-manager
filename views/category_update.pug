extends layout 

block content 
  h1.text-center=title 
  h2.text-primary=category.name

  form(action=`/inventory/categories/${category._id}/update`, method="post")
    label.form-label(for="name") New name 
    input.form-control.mb-2(type="text", name="name", placeholder="Category name")
    button.btn.btn-primary(type="submit") Update
    if errors 
      ul 
        for error in errors 
          li!= error.msg 